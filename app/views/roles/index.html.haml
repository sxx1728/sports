%section.content-header
  .container-fluid
    .row.mb-2
      .col-sm-6
        %h1 权限管理
      .col-sm-6 
        %ol.breadcrumb.float-sm-right
          %li.breadcrumb-item 系统用户管理 
          %li.breadcrumb-item.active 权限管理

%section.content
  .card
    .card-header
      %h3.card-title 
        = "#{current_admin.email} 权限列表"
      .card-tools
        = link_to(raw('<button type="button" class="btn btn-block btn-primary">添加权限</button>'), new_admin_role_path(@admin.id))

    .card-body.table-responsive.p-0
      %table.table.table-bordered
        %tbody
          %tr
            %th 权限名称
            %th 资源类型
            %th 资源ID
            %th 操作
          - @roles.each do |role|
            %tr
              %td
                = Role.role_text(role.name)
              %td
                = role.resource_type
              %td
                = role.resource_id
              %td
                = link_to(raw('<i class="fa fa-trash">&nbsp;</i>'), admin_role_path(@admin, role), data: { confirm: '确定要删除该权限吗?'}, method: :delete )

    .box-footer.clearfix

